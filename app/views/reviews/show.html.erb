<h1><%= @review.title %></h1>

<h3><%= @review.content %></h3>

<h1>Update Review</h1>

<%= form_for [@station, @review] do |f| %>
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :content, "Review" %>
  <%= f.text_area :content %>
  <br />
  <%= f.submit 'Update' %>
<% end %>
<h5><%= link_to "Delete Review", station_review_path(@station, @review),  method: :delete %>
